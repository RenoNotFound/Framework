<div class="text-center" style="padding:50px 0">
    <div class="login-form-1">
        <form id="register-form" class="text-left" action="/sign-up" method="post">
            <div class="login-form-main-message"><h4>Register</h4></div>
            <div class="main-login-form mt-4">
                <div class="login-group">
                    <div class="form-group">
                        <label for="username" class="sr-only">Username</label>
                        <input type="text" class="form-control" id="username" name="username" placeholder="username" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="email" class="sr-only">Email</label>
                        <input type="email" class="form-control" id="email" name="email" placeholder="email" required>
                    </div>
                    <div class="form-group mt-2">
                        <label for="password" class="sr-only">Password</label>
                        <input type="password" class="form-control" id="password" name="password" placeholder="password" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-outline-secondary mt-4">Register</button>
            </div>
        </form>
    </div>
</div>
